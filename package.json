    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "prettier": "^3.8.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1"
  },
  "peerDependencies": {
    "esbuild": ">=0.18.0",
    "react": "^18.0.0 || ^19.0.0",
    "vite": "^6.0.0 || ^7.0.0"
