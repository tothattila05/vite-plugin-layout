{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleDetection": "force",

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true
  },
  "include": ["src"]
}
